<h2>Show All Records in Table</h2>

<% @results.each do |x| %>
     <h4><%= x["description"] %></h4>
     <ul>
     <li> <%= "ID - #{x["id"]}" %> </li>
     <li> <%= "Serial Number - #{x["serial_number"]}" %> </li>
     <li> <%= "Quantity - #{x["quantity"]}" %> </li>
     <li> <%= "Cost - $#{x["cost"]}" %> </li>
     <li> <%= "Location ID - #{x["location_id"]}" %> </li>
     <li> <%= "Category ID - #{x["category_id"]}" %> </li>
     </ul>
<% end %>
